{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ESP32 Project", //F7 COMMAND
            "type": "shell",
            "command": "C:\\Espressif\\frameworks\\esp-idf-v5.3\\export.bat",
            "args": [
                "&&",
                "idf.py",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Flash ESP32 Project", //F5 COMMAND
            "type": "shell",
            "command": "C:\\Espressif\\frameworks\\esp-idf-v5.3\\export.bat",
            "args": [
                "&&",
                "idf.py",
                "flash"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Full Clean + Build ESP32 Project", //F3 COMMAND
            "type": "shell",
            "command": "C:\\Espressif\\frameworks\\esp-idf-v5.3\\export.bat",
            "args": [
                "&&",
                "idf.py",
                "fullclean",
                "&&",
                "idf.py",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
    ]
}