{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "openocd",
            "type": "shell",
            "command": "C:/Espressif/tools/openocd-esp32/v0.12.0-esp32-20250422/openocd-esp32/bin/openocd.exe",
            "args": [
                "-f",
                "${workspaceFolder}/.vscode/esp32s3_usb_jtag.cfg",
                "-c",
                "set ESP_RTOS none"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": [],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Info : Listening on port 3333",
                    "endsPattern": "Info : Listening on port 3333"
                }
            }
        },
        {
            "label": "Build ESP32 Project",
            "type": "shell",
            "command": "C:\\Espressif\\frameworks\\esp-idf-v5.3\\export.bat",
            "args": [
                "&&",
                "idf.py",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Flash ESP32 Project",
            "type": "shell",
            "command": "C:\\Espressif\\frameworks\\esp-idf-v5.3\\export.bat",
            "args": [
                "&&",
                "idf.py",
                "-p",
                "COM38",
                "flash"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Full Clean + Build ESP32 Project",
            "type": "shell",
            "command": "C:\\Espressif\\frameworks\\esp-idf-v5.3\\export.bat",
            "args": [
                "&&",
                "idf.py",
                "fullclean",
                "&&",
                "idf.py",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run menuconfig",
            "type": "shell",
            "command": "C:\\Espressif\\frameworks\\esp-idf-v5.3\\export.bat",
            "args": [
                "&&",
                "idf.py",
                "menuconfig"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "OpenOCD ESP32-S3",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/start_openocd.bat",
            "isBackground": true,
            "problemMatcher": {
                "owner": "cppdbg",
                "pattern": [],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Info : Listening on port 6666",
                    "endsPattern": "Info : [esp32s3.cpu0] Target halted"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}